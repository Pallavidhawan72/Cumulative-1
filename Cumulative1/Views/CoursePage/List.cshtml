@model IEnumerable<Cumulative1.Models.Course>

<style>
    body {
        font-family: 'Arial', sans-serif; 
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        font-size: 32px;
        margin-bottom: 40px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .course-list {
        display: flex;
        flex-wrap: wrap; 
        gap: 20px; 
        padding: 0;
        list-style-type: none; 
    }

    .course-item {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        text-align: center;
        flex: 1 1 calc(33.333% - 20px); 
        min-width: 250px; 
    }

        .course-item:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .course-item a {
            font-size: 20px; 
            color: #007bff;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .course-item a:hover {
                color: #0056b3;
            }

    .course-code {
        font-size: 16px; 
        color: #555; 
        margin-top: 10px; 
    }

    .footer {
        text-align: center;
        margin-top: 30px;
        font-size: 14px;
        color: #777;
    }

   

    
</style>

<div class="container">
    <h1>Available Courses</h1>

    <ul class="course-list">
        @foreach (Cumulative1.Models.Course Course in Model)
        {
            <li class="course-item">
                <a href="/CoursePage/Show/@Course.CId">@Course.Cname</a>
                <div class="course-code">Course Code: @Course.Ccode</div>
            </li>
        }
    </ul>

    <div class="footer">
        <p>&copy; 2024 Course Management System</p>
    </div>
</div>