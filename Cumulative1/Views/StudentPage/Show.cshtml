@model Cumulative1.Models.Student

<style>
    body {
        font-family: Arial, Helvetica, sans-serif; 
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        font-size: 32px;
        margin-bottom: 40px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .student-detail-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); 
        gap: 20px; 
    }

    .student-detail-item {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        border-left: 5px solid #007bff;
        transition: all 0.3s ease;
    }

        .student-detail-item:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            border-left: 5px solid #0056b3;
        }

        .student-detail-item h3 {
            font-size: 22px; 
            color: #007bff;
            margin-bottom: 12px;
        }

        .student-detail-item p {
            font-size: 16px;
            color: #333;
            margin: 4px 0;
        }

            .student-detail-item p span {
                font-weight: 600;
                color: #555;
            }

    .footer {
        text-align: center;
        margin-top: 30px;
        font-size: 14px;
        color: #777;
    }



    
</style>

<div class="container">
    <h1>Student Details</h1>

    <div class="student-detail-grid">
        <div class="student-detail-item">
            <h3>Student ID: <span>@Model.Id</span></h3>
        </div>
        <div class="student-detail-item">
            <h3>First Name: <span>@Model.SFName</span></h3>
        </div>
        <div class="student-detail-item">
            <h3>Last Name: <span>@Model.SLName</span></h3>
        </div>
        <div class="student-detail-item">
            <h3>Student Number: <span>@Model.SNumber</span></h3>
        </div>
        <div class="student-detail-item">
            <h3>Enrollment Date: <span>@Model.EnrollDate.ToString("yyyy-MM-dd")</span></h3>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Student Management System</p>
    </div>
</div>